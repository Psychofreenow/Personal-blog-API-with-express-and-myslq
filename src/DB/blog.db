
DROP DATABASE IF EXISTS freenowcompany_db;

CREATE database freenowcompany_db;

USE freenowcompany_db;

CREATE TABLE articles (
    article_id VARCHAR(36) NOT NULL DEFAULT(UUID()),
    title VARCHAR(255) NOT NULL UNIQUE, 
    content TEXT NOT NULL,
    create_at TIMESTAMP NOT NULL DEFAULT (NOW()),
    PRIMARY KEY(article_id)
) ENGINE = InnoDB;

CREATE TABLE categories(
    id_categories INT NOT NULL AUTO_INCREMENT,
    category VARCHAR(60) NOT NULL,
    article_id VARCHAR(36) NOT NULL,
    FOREIGN KEY(article_id) REFERENCES articles(article_id) ON UPDATE CASCADE ON DELETE CASCADE,
    PRIMARY KEY(id_categories)
) ENGINE = InnoDB; 

